<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperaWindow>:
    id: main_win
    orientation:"vertical"
    canvas.before:
        Color:
            rgba:(1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    
    BoxLayout:
        id: header
        size_hint_y : None
        height: 40
        canvas.before:
            Color:
                rgba: (.06, .45, .45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            markup: True
            italic: False
            shorten: True
            text: '[anchor=tittle1][size=25]SilverPOS SYSTEM[/size]'
            size_hint_x: .9
            bold: True
            halign: 'center'
            color:(1,1,1,1)
            ellipsis_options: {'color':(1,0.5,0.5,1),'underline':True}
        FlatButton:
            id:loggedin_user
            text: 'jdoe'
    
    BoxLayout:
        id: current
        size_hint_y: None
        height:50
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item'
            background_normal: ''
            background_color: (.06, .32, .32, 1)
            size_hint_x: .4
        Button:
            id: cur_product
            text: 'Default Product'
            background_normal: ''
            background_color: (.06, .4, .4, 1)
        Button:
            id: cur_price
            text: '0.00'
            background_normal: ''
            background_color: (.06, .65, .65, 1)
            size_hint_x: .2

    BoxLayout:
        BoxLayout:
            id:product_details
            orientation:"vertical"
            size_hint_y: None
            size_hint_x: .8
            canvas.before:
                Color:
                    rgba: (.06, .45, .45, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                id: product_labels
                FlatButton:
                    text: 'Qty'
                    size_hint_x: .1
                FlatButton:
                    text: 'Product Code'
                    size_hint_x: .25
                FlatButton:
                    text: 'Disc'
                    size_hint_x: .1
                FlatButton:
                    text: 'Disc %'
                    size_hint_x: .1
                FlatButton:
                    text: 'VAT'
                    size_hint_x: .1
                FlatButton:
                    text: 'Price'
                    size_hint_x: .1
                FlatButton:
                    text: 'Product Total'
                    size_hint_x: .2
            BoxLayout:
                id: product_inputs
                size_hint_y: None
                height: 30
                TextInput:
                    id: qty_inp
                    size_hint_x: .1
                TextInput:
                    id: code_inp
                    size_hint_x: .25
                TextInput:
                    id: disc_inp
                    size_hint_x: .1
                TextInput:
                    id: disc_perc_inp
                    size_hint_x: .1
                TextInput:
                    id: vat_inp
                    size_hint_x: .1
                TextInput:
                    id: price_inp
                    size_hint_x: .1
                TextInput:
                    id:total_inp
                    size_hint_x: .2
            BoxLayout:
                id:add_to_cart
                orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: (.06, .45, .45, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Code'
                        size_hint_x: .1
                    Label:
                        text: 'Product name'
                        size_hint_x: .25
                    Label:
                        text: 'Qty'
                        size_hint_x: .1
                    Label:
                        text: 'Disc'
                        size_hint_x: .1
                    Label:
                        text: 'price'
                        size_hint_x: .1
                    Label:
                        text: 'Product Total'
                        size_hint_x: .3
                    #Label:
                        #text: 

        BoxLayout:
            id: preview
            size_hint_y: None
            orientation: "vertical"
            size_hint_x: .2